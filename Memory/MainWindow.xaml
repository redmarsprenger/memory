<Window x:Class="Memory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="800" MinHeight="450" ResizeMode="NoResize">
    <Grid>
        <!-- here it is announced that the starting "frame" is the page written down there.-->
        <StackPanel>
            <Frame Name="frmMainContent" Height="410"
         DataContext="MainwindowMemory"
         Source="{Binding}"
         NavigationUIVisibility="Hidden" Margin="10,0,9.6,0">
            </Frame>

        </StackPanel>
    </Grid>
</Window>
